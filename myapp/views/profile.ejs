	<!-- Header -->
	<% if (locals.users !=undefined) { %>
		<%- include('./partials/headerLogueado') %>
	<% } else { %>
		<%- include('./partials/header') %>
	<% } %>
	<!-- /Header -->


	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<% if(usuario != null) { %>
			<div class="img-container offset-3 col-2">
				<% if(usuario.foto != null) { %>
					<img src = <%= usuario.foto %> alt="foto de perfil" class="foto-perfil">
				<% } else { %>
					<img src = "../public/images/users/AfotoPerfil.png" alt="foto de perfil" class="foto-perfil">
				<% } %>
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"> <%= usuario.usuario %>
						<a href="/users/profileEdit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li> <%= usuario.productos.length > 0 ? usuario.productos.length: 0 %> productos</li>	
						<li>200 seguidores</li>
						<li> <%= usuario.comentarios ? usuario.comentarios.length : 0 %> comentarios</li>
					</ul>
				</div>
			</div>
			<% } else { %>
				<p>No se encontró el usuario</p>
			<% } %>
		</div>
	</section>
	<!-- /Datos del usuario -->


   




