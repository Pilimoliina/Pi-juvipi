
<body>
	
	<% if (locals.users != undefined) { %>
        <%- include('./partials/headerLogueado') %>
     <% } else { %>
        <%- include('./partials/header') %>
    <% } %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src= <%= lista.foto %> alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= lista.usuario%>
						<% if(locals.users != undefined && locals.users.id == lista.id) { %>
							<a href="/users/profileEdit/redirect">
								<i class="fas fa-cog"></i>
							</a>
						<% } %>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= lista.mail%> </li>
						<li><%= lista.productos.length %> productos</li>
						<li>200 seguidores</li>
						<li><%= lista.comentarios.length %> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			
			<% for (let i = 0; i < lista.productos.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%= lista.productos[i].id %>">
						
						<figure class="product-box_image">
							<img src= <%= lista.productos[i].fotoProducto %> alt="<%= lista.productos[i].descripcion%>" class= "imagenProductos">
						</figure>
						<article class="product-box_data">
							<h2><%= lista.productos[i].nombre %></h2>
							<p><%= lista.productos[i].descripcion %></p>
							<p>Comentarios: <%= lista.productos[i].comentarios.length %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>

	</div>
	<!-- Novedades -->

	<%- include("./partials/footer") %>

</body>	
</html>