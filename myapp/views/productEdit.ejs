<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

    <body>
        <!-- Header -->
        <% if (locals.users !=undefined) { %>
            <%- include('./partials/headerLogueado') %>
                <% } else { %>
                    <%- include('./partials/header') %>
                          <% } %>
                            <!-- /Header -->

                            <!-- Novedades -->
                            <div class="container products-wrapper">
                                <div class="row">
                                    <div class="col-12">
                                        <h2 class="products-title">Actualizar productos</h2>
                                    </div>

                                    <!-- Show the "ultimos" products -->
                                    <form class='formulario' action="/product/update" method="POST">

                                        <input type="hidden" name="id" value="<%= producto.productosId %>">

                                        <label class='LabelForm'>Ruta de la imagen</label>
                                        <input class='CampoForm' type="text" id="ImagenProductoAgregado"
                                            name="fotoProducto" value="<%= producto.fotoProducto %>">
                                        <% if (locals.errors && errors.fotoProducto) { %>
                                            <p class="error">
                                                <%= errors.fotoProducto.msg %>
                                            </p>
                                            <% } %>

                                                <label class='LabelForm'>Nombre del producto</label>
                                                <input class='CampoForm' type="text" id="NombreDelProductoAgregado"
                                                    value="<%= producto.fotoProducto %>"
                                                    placeholder="Nombre del Producto" name="nombreProducto">
                                                <% if (locals.errors && errors.nombreProducto) { %>
                                                    <p class="error">
                                                        <%= errors.nombreProducto.msg %>
                                                    </p>
                                                    <% } %>

                                                        <label class='LabelForm'>Descripcion del Producto
                                                            Agregado</label>
                                                        <textarea class='CampoForm' id="DescripcionProductoAgregado"
                                                            name="descripcion"> <%= producto.descripcion %> </textarea>
                                                        <% if (locals.errors && errors.descripcion) { %>
                                                            <p class="error">
                                                                <%= errors.descripcion.msg %>
                                                            </p>
                                                            <% } %>

                                                                <button class="button">Agregar Producto</button>
                                    </form>

                                    <!-- footer -->
                                    <%- include('./partials/footer')%>
                                        <!-- /footer -->

    </body>

</html>