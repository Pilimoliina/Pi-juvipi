					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/<%=lista[i].id%>">
								<figure class="product-box_image">
									<img src="<%= lista[i].fotoProducto %>" alt="<%= lista[i].descripcion %>">
								</figure>
								<article class="product-box_data">
									<h2>
										<%= lista[i].nombreProducto %>
									</h2>
									<p>
										<%= lista[i].descripcion %>
									</p>
									<p>Comentarios: <%= lista[i].comentarios.length %>
									</p>
									<p><a href="/users/<%=lista[i].usuariosId%>">Creado
											por: <%= lista[i].usuarios.nombre%>
									</p>
							</a>
							</article>
							</a>
						</section>
					</div>
				<% } %>
			<% } else { %>
				<p>No se encontraron productos disponibles.</p>
