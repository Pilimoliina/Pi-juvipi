
	<body>
		<!-- Header -->
		<% if (locals.users != undefined) { %>
			<%- include('./partials/headerLogueado') %>
		 <% } else { %>
			<%- include('./partials/header') %>
		<% } %>
		<!-- /Header -->
		
		<!-- product detail -->
		<div class="container products-wrapper">
			
			<div class="d-flex align-items-center">
				<h2 class="products-title"> <%= lista.nombreProducto %> </h2> 
				<p class="product-detail-description">
					<a href="/product">Editar</a>
				</p>
			</div>
			


			<div class="product-detail">
				<div class="row">
					<article class="col-12 col-lg-8 product-detail-info">
						<img src="<%= lista.fotoProducto %>" alt="" class="product-detail-img">
						<p class="product-detail-description">
							<%= lista.descripcion %></p>
					</article>
					<div class="col-12 col-lg-4">
						<section class="comments">
							<% for ( i = 0; i < 3; i++) { %>
								<article>
									<img src="<%= lista.comentarios[i].foto%>" alt="">
									<div class="data">
										<p class="users">
										<strong> <a href="profile"> <%= lista.comentarios[i].usuario %> - <%= lista[i].comentarios.usuariosId %> </a> </strong> <br>
										<%= lista.comentarios[i].textoComentario %></p>
									</div>
									
								</article>
							<% } %>
						</section>
						<form class="form" action="/product" method="get">
							<input class="form-input" type="text" value="" placeholder="Agregar comentario">
							<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
						</form>
						<hr>
					</div>
				</div>
			</div>

		</div>
		<!-- /product detail -->

		<!-- footer -->
		<%- include('./partials/footer') %>
		<!-- footer -->

	</body>	
